<?xml version="1.0" encoding="UTF-8"?>
<database>

    <global>
        <table name="products">
            <field type="BIGINT( 10 ) NOT NULL AUTO_INCREMENT PRIMARY KEY">id</field>
            <field type="VARCHAR( 255 ) NULL">productNo</field>
            <field type="LONGTEXT NULL">data</field>

            <primary>id</primary>
            <index>productNo</index>
            <auto_increment>id</auto_increment>
        </table>

        <table name="product_categories">
            <field type="BIGINT( 20 ) NOT NULL AUTO_INCREMENT PRIMARY KEY">id</field>
            <field type="BIGINT( 20 ) NOT NULL">parentId</field>
            <field type="TEXT DEFAULT ''">fields</field>

            <primary>id</primary>
            <auto_increment>id</auto_increment>
        </table>

        <table name="product_fields">
            <field type="BIGINT( 20 ) NOT NULL AUTO_INCREMENT PRIMARY KEY">id</field>
            <field type="VARCHAR( 255 ) NOT NULL">name</field>
            <field type="VARCHAR( 255 ) NOT NULL">type</field>
            <field type="TEXT">search_type</field>
            <field type="TEXT DEFAULT ''">prefix</field>
            <field type="TEXT DEFAULT ''">suffix</field>
            <field type="INT DEFAULT 0">priority</field>

            <primary>id</primary>
            <index>search_type</index>
            <auto_increment>id</auto_increment>
        </table>

        <table name="products_cache">
            <field type="BIGINT( 10 ) NOT NULL AUTO_INCREMENT PRIMARY KEY">id</field>
            <field type="VARCHAR( 255 ) NULL">productNo</field>
            <field type="VARCHAR( 255 ) NOT NULL">name</field>
        </table>
    </global>

</database>