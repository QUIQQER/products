<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <brick control="\QUI\ERP\Products\Products\VisitedProducts">
            <title>
                <locale group="quiqqer/products" var="brick.VisitedProducts.title"/>
            </title>
            <description>
                <locale group="quiqqer/products" var="brick.VisitedProducts.description"/>
            </description>
        </brick>

        <brick control="QUI\ERP\Products\Controls\Category\Menu">
            <title>
                <locale group="quiqqer/products" var="brick.menu.title"/>
            </title>
            <description>
                <locale group="quiqqer/products" var="brick.menu.description"/>
            </description>
        </brick>

        <brick control="QUI\ERP\Products\Controls\Products\ProductPicker">
            <title>
                <locale group="quiqqer/products" var="brick.productPicker.title"/>
            </title>
            <description>
                <locale group="quiqqer/products" var="brick.productPicker.description"/>
            </description>

            <settings>
                <setting name="sheetOptionsStyle" type="select">
                    <locale group="quiqqer/products" var="brick.productPicker.sheetOptionsStyle"/>

                    <option value="select" selected="selected">
                        <locale group="quiqqer/products"
                                var="brick.productPicker.sheetOptionsStyle.select"
                        />
                    </option>
                    <option value="select" selected="radio">
                        <locale group="quiqqer/products"
                                var="brick.productPicker.sheetOptionsStyle.radio"
                        />
                    </option>
                </setting>

                <setting name="sheetOptions"
                         type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/products/productPicker/SheetOptions"
                >
                    <locale group="quiqqer/products" var="brick.productPicker.sheetOptions"/>
                </setting>

                <setting name="sheets"
                         type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/products/productPicker/Sheets"
                >
                    <locale group="quiqqer/products" var="brick.productPicker.sheets"/>
                </setting>
            </settings>
        </brick>

    </bricks>
</quiqqer>
