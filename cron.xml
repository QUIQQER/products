<?xml version="1.0" encoding="UTF-8"?>
<crons>

    <cron exec="\QUI\ERP\Products\Crons::updateProductCache">
        <title>
            <locale group="quiqqer/products" var="cron.updateProductCache.title"/>
        </title>
        <description>
            <locale group="quiqqer/products" var="cron.updateProductCache.description"/>
        </description>

        <autocreate>
            <interval>0 0 * * 0</interval>
            <active>1</active>
        </autocreate>
    </cron>

    <cron exec="\QUI\ERP\Products\Crons::generateCacheImagesOfProducts">
        <title>
            <locale group="quiqqer/products" var="cron.generateCacheImagesOfProducts.title"/>
        </title>
        <description>
            <locale group="quiqqer/products" var="cron.generateCacheImagesOfProducts.description"/>
        </description>

        <autocreate>
            <interval>0 1 * * 0</interval>
            <active>1</active>
        </autocreate>
    </cron>

</crons>