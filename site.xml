<?xml version="1.0" encoding="UTF-8"?>
<site>
    <types>

        <!-- Kategorien -->
        <type type="types/category" icon="fa fa-shopping-basket">
            <locale group="quiqqer/products" var="admin.types.category"/>
            <desc>
                <locale group="quiqqer/products" var="admin.types.category.desc"/>
            </desc>

            <admin>
                <js onSiteLoad="package/quiqqer/products/bin/CategorySiteWizard"/>
            </admin>

            <attributes>
                <attribute>quiqqer.products.settings.categoryId</attribute>
                <attribute>quiqqer.products.settings.searchFieldIds</attribute>
                <attribute>quiqqer.products.settings.searchFieldsByUser</attribute>
                <attribute>quiqqer.products.settings.dontShowSearch</attribute>
                <attribute>quiqqer.products.settings.categoryStartNumber</attribute>
                <attribute>quiqqer.products.settings.categoryDisplay</attribute>
            </attributes>

            <settings>
                <category name="category-settings">
                    <settings>
                        <title>
                            <locale group="quiqqer/products" var="quiqqer.products.category.settings.title"/>
                        </title>

                        <input conf="quiqqer.products.settings.dontShowSearch" type="checkbox">
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.dontShowSearch"/>
                            </text>
                        </input>

                        <input conf="quiqqer.products.settings.categoryId"
                               data-qui="package/quiqqer/products/bin/controls/categories/Select"
                               data-qui-options-max="1"
                        >
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.categoryId"/>
                            </text>
                        </input>

                        <input conf="quiqqer.products.settings.categoryStartNumber" type="number">
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.categoryStartNumber"/>
                            </text>
                        </input>

                        <select conf="quiqqer.products.settings.categoryDisplay">
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.categoryDisplay"/>
                            </text>

                            <option value="gallery">
                                <locale group="quiqqer/products" var="quiqqer.products.settings.categoryDisplay.gallery"/>
                            </option>
                            <option value="list">
                                <locale group="quiqqer/products" var="quiqqer.products.settings.categoryDisplay.list"/>
                            </option>
                        </select>

                        <input conf="quiqqer.products.settings.searchFieldIds" type="hidden"
                               data-qui="package/quiqqer/products/bin/controls/search/FieldSelect"
                        >
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.searchFieldIds"/>
                            </text>
                        </input>
                    </settings>
                </category>
            </settings>
        </type>

        <!-- Produkt suche -->
        <type type="types/search" icon="fa fa-shopping-basket fa-search">
            <locale group="quiqqer/products" var="admin.types.search"/>
            <desc>
                <locale group="quiqqer/products" var="admin.types.search.desc"/>
            </desc>

            <attributes>
                <attribute>quiqqer.products.settings.searchFieldIds</attribute>
                <attribute>quiqqer.products.settings.searchFieldsByUser</attribute>
            </attributes>

            <settings>
                <category name="search-settings">
                    <settings>
                        <title>
                            <locale group="quiqqer/products" var="quiqqer.products.search.settings.title"/>
                        </title>

                        <input conf="quiqqer.products.settings.searchFieldIds" type="hidden"
                               data-qui="package/quiqqer/products/bin/controls/search/FieldSelect"
                        >
                            <text>
                                <locale group="quiqqer/products" var="quiqqer.products.settings.searchFieldIds"/>
                            </text>
                        </input>
                    </settings>
                </category>
            </settings>
        </type>

    </types>
</site>
